    <View
        android:id="@+id/horizontalSeparator2"
        style="@style/horizontalDivider"

        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/btnGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_save_entry"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_save_blue_24dp"
            android:textColor="#fff"
            android:textSize="40sp"
            app:backgroundTint="#FFF"
            app:borderWidth="0dp"
            app:layout_constraintBottom_toTopOf="@+id/horizontalSeparator2"
            app:layout_constraintRight_toRightOf="parent" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_duplicate_entry"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_content_copy_beige_24dp"
            android:textColor="#fff"
            android:textSize="40sp"
            app:backgroundTint="#FFF"
            app:borderWidth="0dp"
            app:layout_constraintBottom_toTopOf="@+id/horizontalSeparator2"
            app:layout_constraintRight_toRightOf="parent" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_delete_entry"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_delete_red_24dp"
            android:textColor="#fff"
            android:textSize="40sp"
            app:backgroundTint="#FFF"
            app:borderWidth="0dp"
            app:layout_constraintBottom_toTopOf="@+id/horizontalSeparator2"
            app:layout_constraintRight_toRightOf="parent" />

