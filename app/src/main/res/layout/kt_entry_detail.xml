<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/lw_KtEntries_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_alignTop="@+id/horizontalSeparator"
        android:layout_above="@+id/horizontalSeparator"/>

    <View
        android:id="@+id/horizontalSeparator"
        style="@style/horizontalDivider"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_above="@+id/btnGroup"/>

    <RelativeLayout
        android:id="@+id/btnGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/LblKtEntryTotalCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Total Calories"
            android:textSize="24sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/fab_duplicate_entry"
            android:layout_toLeftOf="@+id/fab_duplicate_entry"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_duplicate_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_content_copy_beige_24dp"
            android:textColor="#fff"
            android:textSize="40sp"
            app:backgroundTint="#FFF"
            app:borderWidth="0dp"
            android:layout_toLeftOf="@id/fab_delete_entry"
            android:layout_toStartOf="@id/fab_delete_entry"
            android:layout_centerVertical="true"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_delete_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_delete_red_24dp"
            android:textColor="#fff"
            android:textSize="40sp"
            app:backgroundTint="#FFF"
            app:borderWidth="0dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>


</RelativeLayout>